{
    "compilerOptions": {
        "target": "ES2022",
        "types": ["node"],
        "module": "ESNext",
        "lib": ["ESNext"],
        "outDir": "./dist",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": false,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist", "test", "jest.config.ts"]
}
